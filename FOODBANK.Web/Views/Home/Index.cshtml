@using FOODBANK.Models
@model List<FoodItem>

@{
    ViewData["Title"] = "Home Page";
}



<div class="container mt-4">
    <h2 class="mb-3">Food Items</h2>

    <form method="get" class="row g-2 mb-3">
        <div class="col-auto">
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Search name, category, brand..." />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Search as string))
        {
            <div class="col-auto">
                <a href="/" class="btn btn-outline-secondary">Clear</a>
            </div>
        }
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Unit</th>
                    <th>In Stock</th>
                    <th>Expiration</th>
                    <th>Perishable</th>
                    <th>Supplier</th>
                    <th>Active</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="11" class="text-center text-muted">No food items found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FoodItemID</td>
                            <td>@item.Name</td>
                            <td>@(item.Category ?? "—")</td>
                            <td>@(item.Brand ?? "—")</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@(item.Unit ?? "—")</td>
                            <td>
                                <span class="badge @(item.QuantityInStock > 0 ? "bg-success" : "bg-danger")">
                                    @(item.QuantityInStock ?? 0)
                                </span>
                            </td>
                            <td>@(item.ExpirationDate?.ToString("yyyy-MM-dd") ?? "—")</td>
                            <td>
                                @if (item.IsPerishable == true)
                                {
                                    <span class="badge bg-warning text-dark">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>@(item.Supplier ?? "—")</td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <p class="text-muted">Showing @(Model?.Count ?? 0) item(s)</p>
</div>
